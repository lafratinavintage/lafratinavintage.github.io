---
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";

const prodotti = await getCollection("catalogo");
---

<Layout titolo="Design Vintage Italiano">
    <section class="mb-16">
        <h1 class="text-7xl mb-6">Selezione Curata.</h1>
        <p class="text-2xl max-w-2xl leading-relaxed">
            Oggetti che hanno fatto la storia del design, recuperati con cura.
            <span class="bg-brand-orange text-white px-2"
                >Nessun carrello, solo bellezza.</span
            >
        </p>
    </section>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-12">
        {
            prodotti.map((p) => (
                <article class="group relative bg-white border-4 border-brand-brown p-4 shadow-retro hover:shadow-retro-hover transition-all">
                    <div class="aspect-square overflow-hidden border-2 border-brand-brown mb-4">
                        <img
                            src={p.data.imageUrls[0]}
                            alt={p.data.nome}
                            class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                        />
                    </div>

                    <div class="space-y-3">
                        <div class="flex justify-between items-end">
                            <h2 class="text-3xl font-display leading-none">
                                {p.data.nome}
                            </h2>
                            <p class="text-2xl font-bold">
                                {p.data.prezzo.toFixed(2)}
                                {p.data.valuta}
                            </p>
                        </div>
                        <p class="text-sm opacity-70 line-clamp-2 mb-6">
                            {p.data.descrizione}
                        </p>
                        <a
                            href={`${import.meta.env.BASE_URL}catalogo/${p.id}`}
                            class="block w-full text-center py-3 bg-brand-brown text-white font-bold hover:bg-brand-orange uppercase tracking-widest transition-colors"
                        >
                            Dettagli
                        </a>
                    </div>
                </article>
            ))
        }
    </div>
</Layout>
