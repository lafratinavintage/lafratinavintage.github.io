---
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";

// 1. Logica Prodotti: Prendi i primi 9
const tuttiProdotti = await getCollection("catalogo");
const prodottiMostrati = tuttiProdotti.slice(0, 9);
const mostraLinkCatalogo = tuttiProdotti.length > 9;

// 2. Logica Eventi: ordinati per data, primi 4
const tuttiEventi = await getCollection("eventi");
const eventi = tuttiEventi
    .sort((a, b) => a.data.data.getTime() - b.data.data.getTime())
    .slice(0, 4);

const baseUrl = import.meta.env.BASE_URL;

const contatti = {
    email: import.meta.env.PUBLIC_CONTACT_EMAIL,
    tel: import.meta.env.PUBLIC_CONTACT_PHONE,
    wa: import.meta.env.PUBLIC_CONTACT_WHATSAPP,
    ig: import.meta.env.PUBLIC_CONTACT_INSTAGRAM,
    fb: import.meta.env.PUBLIC_CONTACT_FACEBOOK,
};
---

<Layout titolo="Home">
    <section id="home" class="py-20 border-b-4 border-brand-brown">
        <div class="max-w-3xl">
            <p class="text-4xl md:text-5xl font-display leading-tight mb-8">
                Benvenuto nella collezione di <span
                    class="bg-brand-yellow px-2 text-brand-brown"
                    >design vintage</span
                > degli anni '60, '70 e '80.
            </p>
            <div class="space-y-6 text-xl opacity-90 font-medium">
                <p>
                    Ogni pezzo √® stato accuratamente selezionato da <strong
                        >Alessandro & Luigina</strong
                    >, restaurato con cura e riportato al suo antico splendore.
                </p>
            </div>
        </div>
    </section>

    <section id="catalogo" class="py-20">
        <h2 class="text-6xl font-display mb-12">Collezione Attuale</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">
            {
                prodottiMostrati.map((p) => (
                    <a
                        href={`${baseUrl}catalogo/${p.id}`}
                        class="group bg-white border-4 border-brand-brown shadow-retro hover:shadow-retro-hover transition-all overflow-hidden"
                    >
                        <div class="aspect-square border-b-4 border-brand-brown overflow-hidden">
                            <img
                                src={p.data.imageUrls[0]}
                                alt={p.data.nome}
                                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                            />
                        </div>
                        <div class="p-6 bg-white">
                            <h3 class="text-2xl font-display mb-2">
                                {p.data.nome}
                            </h3>
                            <p class="text-sm line-clamp-2 opacity-70 mb-4 font-medium italic">
                                "{p.data.descrizione}"
                            </p>
                            <div class="flex justify-between items-center border-t-2 border-brand-brown pt-4">
                                {p.data.anno && (
                                    <span class="font-mono text-sm bg-brand-brown text-white px-2 py-1">
                                        {p.data.anno}
                                    </span>
                                )}
                                <span class="text-xl font-bold text-brand-orange">
                                    {p.data.prezzo} {p.data.valuta}
                                </span>
                            </div>
                        </div>
                    </a>
                ))
            }
        </div>

        {
            mostraLinkCatalogo && (
                <div class="mt-16 text-center">
                    <a
                        href={`${baseUrl}catalogo`}
                        class="inline-block bg-brand-yellow text-brand-brown border-4 border-brand-brown px-10 py-4 text-2xl font-display shadow-retro hover:shadow-retro-hover hover:-translate-y-1 transition-all"
                    >
                        Vedi tutto il catalogo ‚Üí
                    </a>
                </div>
            )
        }
    </section>

    <section
        id="eventi"
        class="py-20 border-y-4 border-brand-brown bg-[#F9F3E5]"
    >
        <h2 class="text-6xl font-display mb-6 text-center">Prossimi Eventi</h2>
        <p class="text-center max-w-2xl mx-auto mb-16 text-lg">
            Vieni a trovarci ai mercatini e fiere vintage. Scopri i pezzi dal
            vivo!
        </p>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-6xl mx-auto">
            {
                eventi.map((e) => (
                    <div class="bg-white border-4 border-brand-brown p-8 flex gap-6 shadow-retro relative overflow-hidden group">
                        <div class="flex flex-col items-center justify-center bg-brand-orange text-white border-2 border-brand-brown p-4 min-w-[100px] h-fit rotate-[-2deg]">
                            <span class="text-4xl font-black">
                                {e.data.data.getDate()}
                            </span>
                            <span class="uppercase font-bold text-sm">
                                {e.data.data.toLocaleString("it-IT", {
                                    month: "short",
                                })}
                            </span>
                        </div>
                        <div class="space-y-2">
                            <h3 class="text-2xl font-display">
                                {e.data.titolo}
                            </h3>
                            <p class="font-bold text-brand-green uppercase text-xs tracking-widest flex items-center gap-2">
                                üìç {e.data.luogo}
                            </p>
                            <p class="text-sm opacity-80 leading-relaxed">
                                {e.data.descrizione}
                            </p>
                            <p class="font-mono text-xs font-bold pt-2">
                                üïí {e.data.orario}
                            </p>
                        </div>
                    </div>
                ))
            }
        </div>
    </section>

    <section id="contatti" class="py-24 text-center">
        <div class="max-w-3xl mx-auto">
            <h2 class="text-6xl font-display mb-8 italic text-brand-orange">
                Ti interessa qualcosa?
            </h2>

            <p class="text-xl mb-12">
                Ogni pezzo √® unico. Contattaci per foto extra, prezzi o per
                commissionarci una ricerca specifica.
            </p>

            <div class="grid grid-cols-5 gap-8">
                <a
                    href={`mailto:${contatti.email}`}
                    class="flex flex-col items-center p-6 bg-white border-2 border-brand-brown hover:bg-brand-yellow transition-colors group"
                >
                    <span
                        class="text-4xl mb-2 group-hover:scale-110 transition-transform"
                        >üìß</span
                    >

                    <span
                        class="font-bold uppercase text-[10px] tracking-widest"
                        >Email</span
                    >
                </a>

                <a
                    href={`tel:${contatti.tel.replace(/\s/g, "")}`}
                    class="flex flex-col items-center p-6 bg-white border-2 border-brand-brown hover:bg-brand-yellow transition-colors group"
                >
                    <span
                        class="text-4xl mb-2 group-hover:scale-110 transition-transform"
                        >üì±</span
                    >

                    <span
                        class="font-bold uppercase text-[10px] tracking-widest"
                        >Telefono</span
                    >
                </a>

                <a
                    href={`https://wa.me/${contatti.wa}`}
                    target="_blank"
                    class="flex flex-col items-center p-6 bg-white border-2 border-brand-brown hover:bg-brand-yellow transition-colors group"
                >
                    <span
                        class="text-4xl mb-2 group-hover:scale-110 transition-transform"
                        >üí¨</span
                    >

                    <span
                        class="font-bold uppercase text-[10px] tracking-widest"
                        >WhatsApp</span
                    >
                </a>

                <a
                    href={`https://instagram.com/${contatti.ig}`}
                    target="_blank"
                    class="flex flex-col items-center p-6 bg-white border-2 border-brand-brown hover:bg-brand-yellow transition-colors group"
                >
                    <span
                        class="text-4xl mb-2 group-hover:scale-110 transition-transform"
                        >üì∑</span
                    >

                    <span
                        class="font-bold uppercase text-[10px] tracking-widest"
                        >Instagram</span
                    >
                </a>

                <a
                    href={`https://www.facebook.com/${contatti.fb}`}
                    target="_blank"
                    class="flex flex-col items-center p-6 bg-white border-2 border-brand-brown hover:bg-brand-yellow transition-colors group"
                >
                    <span
                        class="text-4xl mb-2 group-hover:scale-110 transition-transform"
                        >üîó</span
                    >

                    <span
                        class="font-bold uppercase text-[10px] tracking-widest"
                        >Facebook</span
                    >
                </a>
            </div>
        </div>
    </section>
</Layout>
