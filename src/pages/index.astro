---
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";

const tuttiProdotti = await getCollection("catalogo");
const prodottiMostrati = tuttiProdotti.slice(0, 6);
const mostraLinkCatalogo = tuttiProdotti.length > 6;

const tuttiEventi = await getCollection("eventi");
const eventi = tuttiEventi
    .sort((a, b) => a.data.data.getTime() - b.data.data.getTime())
    .slice(0, 4);

const baseUrl = import.meta.env.BASE_URL;

const contatti = {
    email: import.meta.env.PUBLIC_CONTACT_EMAIL,
    tel: import.meta.env.PUBLIC_CONTACT_PHONE,
    wa: import.meta.env.PUBLIC_CONTACT_WHATSAPP,
    ig: import.meta.env.PUBLIC_CONTACT_INSTAGRAM,
    fb: import.meta.env.PUBLIC_CONTACT_FACEBOOK,
};
---

<Layout titolo="Home">
    <section id="home" class="py-12 md:py-20 text-center">
        <div class="max-w-4xl mx-auto">
            <div class="space-y-6 text-lg md:text-xl font-body font-normal leading-relaxed">
                <p class="text-brand-yellow">
                    Benvenuto nella mia collezione di <span class="text-brand-orange font-bold">Design Vintage degli anni '50, '60, '70 e '80.</span>
                </p>
                <p class="text-brand-yellow">
                    Ogni pezzo √® stato accuratamente selezionato, restaurato con cura e riportato al suo antico splendore.
                </p>
                <p class="text-brand-yellow">
                    Scopri oggetti unici che raccontano storie di un'epoca in cui il design era audace, i colori vivaci e l'artigianato impeccabile.
                </p>
            </div>
        </div>
    </section>

    <section id="catalogo" class="py-20 text-center">
        <h2 class="font-display font-bold text-4xl md:text-5xl text-brand-yellow relative inline-block mb-16 uppercase">
            Collezione
            <span class="absolute -bottom-4 left-1/2 -translate-x-1/2 w-20 h-1.5 bg-brand-orange"></span>
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10 text-left">
            {
                prodottiMostrati.map((p) => (
                    <a href={`${baseUrl}catalogo/${p.id}`} class="card-vintage group">
                        <div class="aspect-square border-b-4 border-brand-brown overflow-hidden bg-brand-cream/50">
                            <img
                                src={p.data.imageUrls[0]}
                                alt={p.data.nome}
                                class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700"
                            />
                        </div>
                        <div class="p-6">
                            <h3 class="text-xl font-display font-black mb-2 tracking-tight">{p.data.nome}</h3>
                            <p class="text-sm font-body opacity-80 mb-6 line-clamp-2 italic">
                                "{p.data.descrizione}"
                            </p>
                            <div class="flex justify-between items-center border-t-2 border-brand-brown pt-4">
                                {p.data.anno && <span class="badge-year text-xs">{p.data.anno}</span>}
                                <span class="text-xl font-black text-brand-orange">
                                    {p.data.prezzo}‚Ç¨
                                </span>
                            </div>
                        </div>
                    </a>
                ))
            }
        </div>

        {
            mostraLinkCatalogo && (
                <div class="mt-16 text-center">
                    <a href={`${baseUrl}catalogo`} class="inline-block bg-brand-orange text-white border-4 border-brand-brown px-10 py-4 text-lg font-bold shadow-retro hover:shadow-none hover:translate-x-1 hover:translate-y-1 transition-all">
                        Vedi tutta la Collezione ‚Üí
                    </a>
                </div>
            )
        }
    </section>

    <section id="eventi" class="py-20 text-center">
        <h2 class="font-display font-bold text-4xl md:text-5xl text-brand-yellow relative inline-block mb-16 uppercase">
            Prossimi Eventi
            <span class="absolute -bottom-4 left-1/2 -translate-x-1/2 w-20 h-1.5 bg-brand-orange"></span>
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-10 max-w-6xl mx-auto text-left">
            {
                eventi.map((e) => (
                    <div class="event-card group hover:-translate-y-1 transition-all">
                        <div class="flex gap-6">
                            <div class="flex flex-col items-center justify-center bg-brand-yellow border-4 border-brand-brown p-4 min-w-[80px] h-fit shadow-[4px_4px_0px_0px_#1A1A1A]">
                                <span class="text-2xl font-black leading-none">{e.data.data.getDate()}</span>
                                <span class="uppercase font-bold text-[10px]">
                                    {e.data.data.toLocaleString("it-IT", { month: "short" })}
                                </span>
                            </div>
                            <div class="space-y-3">
                                <h3 class="text-xl font-display font-black tracking-tight">{e.data.titolo}</h3>
                                <div class="flex items-center gap-2 text-brand-green font-bold text-[10px] uppercase">
                                    <span class="bg-brand-brown text-white px-2 py-0.5 tracking-tighter italic">üìç {e.data.luogo}</span>
                                    <span class="text-brand-brown italic">üïí {e.data.orario}</span>
                                </div>
                                <p class="text-sm font-body opacity-80 leading-relaxed">
                                    {e.data.descrizione}
                                </p>
                            </div>
                        </div>
                    </div>
                ))
            }
        </div>
    </section>

    <section id="contatti" class="py-24 text-center">
        <div class="max-w-3xl mx-auto bg-brand-yellow border-4 border-brand-brown p-10 shadow-retro">
            <h2 class="font-display font-bold text-3xl md:text-4xl text-brand-brown relative inline-block mb-8 uppercase tracking-tighter">
                Ti interessa <span class="text-brand-orange">un pezzo?</span>
                <span class="absolute -bottom-3 left-1/2 -translate-x-1/2 w-16 h-1 bg-brand-brown/30"></span>
            </h2>
            <p class="text-base font-body mb-10 font-bold">
                Contattaci per foto extra o per commissionarci una ricerca specifica.
            </p>

            <div class="flex flex-wrap justify-center gap-4">
                <a href={`mailto:${contatti.email}`} class="bg-white border-2 border-brand-brown p-3 hover:bg-brand-orange hover:text-white transition-all font-bold uppercase text-[10px] shadow-[4px_4px_0px_0px_#1A1A1A]">Email</a>
                <a href={`https://wa.me/${contatti.wa}`} class="bg-white border-2 border-brand-brown p-3 hover:bg-brand-green hover:text-white transition-all font-bold uppercase text-[10px] shadow-[4px_4px_0px_0px_#1A1A1A]">WhatsApp</a>
                <a href={`https://instagram.com/${contatti.ig}`} class="bg-white border-2 border-brand-brown p-3 hover:bg-brand-coral hover:text-white transition-all font-bold uppercase text-[10px] shadow-[4px_4px_0px_0px_#1A1A1A]">Instagram</a>
            </div>
        </div>
    </section>
</Layout>